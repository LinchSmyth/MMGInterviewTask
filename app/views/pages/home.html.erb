<script type="text/javascript">
  $(function() {
    // подключаю datetimepicker
    $('#datetimepicker').datetimepicker();
  });
</script>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
  <h1>Here you can leave your feedback!</h1>
  <p>For additional information visit <%= link_to "About", pages_about_path %> page</p>
  <hr />
  <div class="row distance-before-footer">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <%= form_for :feedbacks do |feedback| %>
        <%= render 'shared/error_messages' %>
        <div class=	"col-lg-5 col-md-5 col-sm-5 col-xs-5">
          <%= feedback.label :name %><br />
          <%= feedback.text_field :name, class: 'form-control', placeholder: "Type here your name" %>
          <br />
          <%= feedback.label :email %><br />
          <%= feedback.text_field :email, class: 'form-control', placeholder: "Your e-mail" %>
          <br/>
          <%= feedback.label :age %><br />
          <%= feedback.text_field :age, class: 'form-control', placeholder: "Your age" %>
          <br />
          <%= feedback.label :datetime %><br />
          <%= feedback.text_field :datetime, id: 'datetimepicker', class: 'form-control', placeholder: "Select date & time" %>
          <br />
          <%= feedback.submit "Submit feedback", class: 'btn btn-default btn-lg btn-success'%>
        </div>
        <div class=	"col-lg-7 col-md-7 col-sm-7 col-xs-7">
          <%= feedback.label :message %><br/>
          <%= feedback.text_area :message, class: 'form-control', rows: 9, placeholder: "Leave here your message..."%>
          <br />
          <%= feedback.label :attachment %><br />
          <%= feedback.file_field :attachment, as: :file %>
        </div>
      <% end %>
    </div>
  </div>
</div>